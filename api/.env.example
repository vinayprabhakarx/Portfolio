# Mailgun API (Primary)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=yourdomain.com
MAILGUN_USERNAME=api
MAILGUN_FROM="Your Name <noreply@yourdomain.com>"

# SMTP (Fallback - used if Mailgun API not available)
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=postmaster@yourdomain.com
SMTP_PASS=your_smtp_password_here
SMTP_FROM="Your Name <noreply@yourdomain.com>"

# Domain (used if SMTP_FROM not set)
DOMAIN=yourdomain.com

# Contact form Portfolio info
RECIPIENT_EMAIL=your.email@example.com
SENDER_WEBSITE=https://yourwebsite.com
PORTFOLIO_URL=https://yourwebsite.com
NODE_ENV=development
